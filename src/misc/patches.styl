@media only screen and (max-width : 1650px)
  .row-assign
    width 100%
  .col-assign-1, .col-assign-2
    width 25%

@media only screen and (max-width : 1600px)
  .col-assign-1
    width auto
    margin-right 25px
  .col-assign-2
    width 25%

.fx-table
  display block
  width 100%
  .el-tag
    margin 1px
    height 16px
    line-height 14px
    font-size 11px
  a
    color #323232

.fx-row
  display flex
  width 100%
  justify-content: space-between

.fx-button
  background #d3dae5
  color #000
  cursor pointer
  outline none

.fx-cell
  display block
  width 15%
  flex 1 1 auto
  box-sizing border-box
  border 1px solid #dfe6ec
  padding 1px 8px
  text-align center
  font-size 12px
  .fx-tiny
    display inline-block
    width auto
    margin 2px

.fx-head, .fx-light-grey
  background #eef1f6

.fx-grey
  background #d3dae5

.fx-a
  display block
  width 15%
  flex 1 1 auto
  box-sizing border-box
  border 1px solid #dfe6ec
  padding 1px 8px
  text-align center
  font-size 12px
  cursor pointer
  outline none
  background #fff

.fx-spoiler
  width 100%
  display none

.fx-table-big
  display block
  width 100%
  .fx-cell
    font-size: 14px;
    padding: 10px 0;
    position: relative;

.fx-tabs
  display block


.fx-tab
  width auto
  display inline-block
  font-size 14px
  line-height 24px
  height 26px
  color #000
  cursor pointer
  outline none
  background #fff
  transition .2s linear
  padding 0px 10px
  border 1px solid rgb(131, 145, 165)
  box-sizing border-box

.fx-tab-active
  background rgb(131, 145, 165)
  color #fff

.introjs-tooltiptext
  font-size 12px
  line-height 15px

body
  min-width 1300px

.el-input-number
  vertical-align middle

.el-select .el-input__inner
  -webkit-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none

.el-table th>.cell,
.el-table .cell
  word-break normal

.tags
  margin 0 -5px
  .el-tag
    margin 0 5px


.el-menu-item.is-active
  color #bfcbd9

.el-dialog--tiny
  width 30%
  min-width 300px

#nprogress .bar
  background #33ba3a !important
  height 5px !important

#nprogress .spinner
  display none !important

.r
  float right

.m
  margin-right 10px

span.el-checkbox-button__inner
  border-left 1px solid #bfcbd9
  border-radius 0
  white-space inherit !important

button.easy-button-button
  background white
  font-size 1.2em
  padding 8px

::-webkit-scrollbar
  width 8px
  height 8px
  background-color #D3DCE6
::-webkit-scrollbar-button
::-webkit-scrollbar-track
  display none
::-webkit-scrollbar-thumb
  background-color #99A9BF
::-webkit-scrollbar-thumb:hover
  background-color #475669

.el-table-cont
  position relative
.el-table-author
  position absolute
  top 20px
  left 20px
  padding 9px
  border-radius 4px
  opacity 0
  background #e4e8f1
  border 1px solid #d1dbe5
  color #323232
  font-size 13px
  z-index 3

  &.js-active
    opacity 1

button.easy-button-button
  border none
  font-size 1.15em
  padding 7.5px 8.1px
  & .el-icon-check
    font-size 0.7445em

.animated-icon{
  width: 1px;
  height: 1px;
  background-color: rgba(255,0,0,0.9);
  border-radius: 50%;
  box-shadow: 0px 0px 2px red;
  transition: all 1s
}

.easy-button-button.disabled {
  display: none;
}

.button-help{
  position: absolute;
  top: 1px;
  left: 3px;
  padding: 2px 2px;
  z-index: 4;
}
.btn-help{
  padding: 10px 7px;
}

.el-tabs__header {
  margin: 0;
}

.panel-bottom
  position absolute
  bottom 0
  left 0
  width 100%
  height 230px
  box-sizing border-box
  padding 0px
  border 1px groove #cfcfcf
  background #fff
  overflow auto
  z-index 999

.tooltip-transparent
  background-color rgba(0,0,0,0)!important
  border none!important
  box-shadow none!important
  font-size 10px

.introjs-helperNumberLayer
  top 1px!important
  left 1px!important
  margin 0!important
  opacity 0.7!important

.clouds
  display flex

.cloud
  float left
  width calc(33.33% - 20px)
  padding 10px 15px
  margin 10px
  box-shadow 0 0 10px rgba(0,0,0,0.5)
  background #fff
  box-sizing border-box
  .cloud-row
    float left
    width 100%
    margin 5px 0
    font-weight 100
    font-size 12px
    span
      float right
  &.horizontal
    width 100%
    height auto
    padding 10px 5px
    box-shadow none
    margin 0
    .cloud-row
      width 33.33%
      padding 6px 10px
      margin 0
      box-sizing border-box
      border-left 1px solid #8a8a8a
      border-right 1px solid #8a8a8a
      border-bottom 1px dashed #8a8a8a
      border-top 1px dashed #8a8a8a



.cloud-graph
  float left
  width calc(50% - 20px)
  padding 5px 15px
  margin 10px
  box-shadow 0 0 10px rgba(0,0,0,0.5)
  background #fff
  box-sizing border-box

/* pages/recipes/form - for help tooltip */
.el-tooltip__popper.is-light
  width 200px