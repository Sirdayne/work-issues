/* fixes for element.eleme.ui */

.el-select
  .el-tag
    position relative
    height auto
    width auto
    .el-select__tags-text
      padding-left 18px
      white-space normal
    .el-tag__close
      position absolute
      top 5px
      left 2px

.el-input-number
  vertical-align middle

.el-select .el-input__inner
  -webkit-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none

.el-table th>.cell,
.el-table .cell
  word-break normal

.tags
  margin 0 -5px
  .el-tag
    margin 0 5px

.el-menu-item.is-active
  color #bfcbd9

.el-menu--horizontal > .el-menu-item.is-active
  color #bfcbd9c0
  border-bottom 5px solid #20a0ff

.el-dialog--scrollable
  .el-dialog
    height calc(100% - 100px)
    max-height 650px
    margin-bottom 0
    & ::-webkit-scrollbar, & ::-webkit-scrollbar-thumb
      visibility hidden
    &:hover ::-webkit-scrollbar, &:hover ::-webkit-scrollbar-thumb
      visibility visible
  .el-dialog__body
    height calc(100% - 98px)
    overflow-y auto
    overflow-x auto

.el-dialog--tiny
  min-width 300px
  max-width 380px
  .el-dialog__body
    overflow-y auto
    overflow-x auto

.el-tabs__header
  margin 0

/* pages/recipes/form - for help tooltip */
.el-tooltip__popper.is-light
  width 200px

.el-loading-mask
  z-index 2000!important

.el-notification
  z-index 10001!important

.el-message
  z-index 10001!important

.el-dialog__wrapper
  z-index 10002!important

.el-select-dropdown, .el-picker-panel
  z-index 10004!important


.el-table
  td.table-inside > div.cell
    padding 0
  .edited-row
    background-color #eef1f696
  .new-row
    background-color #eef1f696
  & ::-webkit-scrollbar, & ::-webkit-scrollbar-thumb
    visibility hidden
  &:hover ::-webkit-scrollbar, &:hover ::-webkit-scrollbar-thumb
    visibility visible
.borderless-table
  border none
  td:last-child
    border-right none
  &.el-table::after, &.el-table::before
    display none
  tr.el-table__row:last-child > td
    border-bottom none

.el-table-filter__checkbox-group
  overflow-y auto
  max-height 300px

.el-button.printer
  content: ""
  display: inline-block
  background-image: url( '~assets/printer.svg' ) !important;
  background-repeat: no-repeat;
  background-size: 20px auto;
  background-position: center center;
  color: transparent !important;
  width: 50px;
